<div class="container">
  <div class="row">
    <h2 class="my-4", style="background-color:#dcdcdc;">会員情報編集</h2>
  </div>
  <%= form_with model: @user, url: members_path, method: :patch, local: true do |f| %>
    <div class="row">
      <table class="table table-borderless">
          <tr>
            <th>ニックネーム</th>
            <td>
              <%= f.text_field :name %>
            </td>
          </tr>

          <tr>
            <th>よく遊ぶゲーム機</th>
            <td><%= f.text_field :fav_machine %></td>
          </tr>

          <tr>
            <th>Twitter</th>
            <td class="form"><%= f.text_field :twitter_id %></td>
          </tr>

          <tr>
            <th>Instagram</th>
            <td class="form"><%= f.text_field :instagram_id %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td class="form"><%= f.email_field :email, style: "width: 49%;" %></td>
          </tr>
      </table>
    </div>
    <div class="row">
      <div class="col text-center">
        <%= f.submit "編集内容を保存", class: "btn btn-success" %>
      </div>
      <div class="col">
        <%= link_to "退会する", confirm_destroy_members_path, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>